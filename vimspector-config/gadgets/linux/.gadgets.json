{
  "adapters": {
    "multi-session": {
      "host": "${host}",
      "port": "${port}"
    },
    "lldb-vscode": {
      "variables": {},
      "attach": {
        "pidProperty": "pid",
        "pidSelect": "ask"
      },
      "command": [
        "lldb-vscode-11"
      ],
      "env": {
        "LLDB_LAUNCH_FLAG_LAUNCH_IN_TTY": "YES"
      },
      "name": "lldb"
    },
    "vscode-cpptools": {
      "attach": {
        "pidProperty": "processId",
        "pidSelect": "ask"
      },
      "command": [
        "${gadgetDir}/vscode-cpptools/debugAdapters/OpenDebugAD7"
      ],
      "configuration": {
        "args": [],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "type": "cppdbg"
      },
      "name": "cppdbg"
    }
  }
}
